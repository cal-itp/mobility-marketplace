{
  "name": "cal-itp/mobility-marketplace",
  "dockerComposeFile": "compose.yml",
  "service": "site",
  "workspaceFolder": "/usr/src/mobimart",
  "remoteEnv": {
    "MISE_TRUSTED_CONFIG_PATHS": "${containerEnv:PATH}:/usr/src/mobimart"
  },
  "postStartCommand": [
    "/bin/bash",
    ".devcontainer/postStart.sh"
  ],
  "postAttachCommand": ["/bin/bash", ".devcontainer/postAttach.sh"],
  "customizations": {
    "settings": {
      "terminal.integrated.defaultProfile.linux": "bash",
      "terminal.integrated.profiles.linux": {
        "bash": {
          "path": "/bin/bash"
        }
      }
    },
    "extensions": [
      "eamodio.gitlens",
      "esbenp.prettier-vscode",
      "mhutchie.git-graph",
      "redhat.vscode-xml",
      "sissel.shopify-liquid",
      "tombi-toml.tombi"
    ]
  }
}
